<?xml version="1.0" encoding="ISO-8859-1"?>
<phpunit colors="true">
	<php>
	</php>

	<testsuites>
		<testsuite name="All">
			<directory>units/</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-html" target="/srv/www/proj266/WebContent/coverage" charset="UTF-8" highlight="true" lowUpperBound="35" highLowerBound="70"/>
		<log type="junit" target="/srv/www/proj266/WebContent/coverage/logfile.xml"/>
	</logging>

	<!-- exclude files in code coverage -->
	<filter>
		<blacklist>
			<directory>/srv/www/proj266/tests</directory>
			<directory>/srv/www/proj266/php_includes/system</directory>
			<directory>/srv/www/conf/</directory>
		</blacklist>
	</filter>
</phpunit>
